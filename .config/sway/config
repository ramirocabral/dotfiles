set $mod Mod4
font pango:monospace 8

### Autostart
exec --no-startup-id dex --autostart --environment sway
exec_always swaybg -i /home/ramiro/.local/wallpapers/4.jpg -m fill

# logout every hour, lock after 10 minutes of inactivity
exec swayidle -w \
  timeout 3600 'swaylock -f' \
  timeout 600 'swaymsg "output * power off"' \
  resume 'swaymsg "output * power on"' \
  before-sleep 'swaylock -f'

exec --no-startup-id nm-applet
exec_always autotiling

exec_always wl-paste --watch cliphist store

### Audio
bindsym $mod+equal exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+minus exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+m exec pactl set-sink-mute @DEFAULT_SINK@ toggle

### Brillo
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

### Mouse
floating_modifier $mod
# tiling_drag modifier titlebar

### Programas
bindsym $mod+Return exec ghostty
bindsym $mod+Shift+b exec brave
bindsym $mod+Shift+m exec wofi --show drun
bindsym $mod+v exec cliphist list | wofi --dmenu --pre-display-cmd "echo '%s' | cut -f 2" | cliphist decode | wl-copy
bindsym $mod+Shift+e exec thunar
bindsym $mod+Shift+s exec spotify-launcher
bindsym $mod+Shift+f exec doublecmd
bindsym $mod+w kill

### Screenshot
bindsym --release $mod+s exec \
  grim -g "$(slurp)" /home/ramiro/Screenshots/$(date +%F_%T).png && \
  wl-copy < /home/ramiro/Screenshots/$(ls -t /home/ramiro/Screenshots | head -n1)

### Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

### Move
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

### Layout
bindsym $mod+f fullscreen toggle
bindsym $mod+e layout toggle split
bindsym $mod+space exec togglelayout

### Workspaces
set $fm DP-3
set $sm HDMI-A-1

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

set $ws10 "10"
set $ws11 "11"
set $ws12 "12"
set $ws13 "13"
set $ws14 "14"
set $ws15 "15"
set $ws16 "16"
set $ws17 "17"
set $ws18 "18"

workspace 1 output $fm
workspace 2 output $fm
workspace 3 output $fm
workspace 4 output $fm
workspace 5 output $fm
workspace 6 output $fm
workspace 7 output $fm
workspace 8 output $fm
workspace 9 output $fm

workspace 10 output $sm
workspace 11 output $sm
workspace 11 output $sm
workspace 12 output $sm
workspace 13 output $sm
workspace 14 output $sm
workspace 15 output $sm
workspace 16 output $sm
workspace 17 output $sm
workspace 18 output $sm

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+8 workspace number $ws7
bindsym $mod+9 workspace number $ws7

bindsym Mod1+1 workspace number $ws10
bindsym Mod1+2 workspace number $ws11
bindsym Mod1+3 workspace number $ws12
bindsym Mod1+4 workspace number $ws13
bindsym Mod1+5 workspace number $ws14
bindsym Mod1+6 workspace number $ws15
bindsym Mod1+7 workspace number $ws16
bindsym Mod1+8 workspace number $ws17
bindsym Mod1+9 workspace number $ws18

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

bindsym Mod1+Shift+1 move container to workspace number $ws10
bindsym Mod1+Shift+2 move container to workspace number $ws11
bindsym Mod1+Shift+3 move container to workspace number $ws12
bindsym Mod1+Shift+4 move container to workspace number $ws13
bindsym Mod1+Shift+5 move container to workspace number $ws14
bindsym Mod1+Shift+6 move container to workspace number $ws15
bindsym Mod1+Shift+7 move container to workspace number $ws16
bindsym Mod1+Shift+8 move container to workspace number $ws17
bindsym Mod1+Shift+9 move container to workspace number $ws18

### Resize mode
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

### Bar
bar {
    swaybar_command waybar
    position bottom
}

### Borders / gaps
default_border pixel 2
hide_edge_borders none
smart_borders on
gaps inner 7
smart_gaps on

### Colors
client.focused #166fce #166fce #166fce #166fce
client.focused_inactive #000000 #000000 #000000 #000000
client.unfocused #000000 #000000 #000000 #000000

input * {
    repeat_delay 300
    repeat_rate 50
    xkb_options caps:swapescape
}

# Reload waybar with Win+Ctrl+R
bindsym Ctrl+Mod4+r exec killall -SIGUSR2 waybar
# Logout with Win+Ctrl+Q
bindsym Ctrl+Mod4+q exec swaymsg exit

exec_always dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec_always ~/.local/bin/sway-displays.sh
