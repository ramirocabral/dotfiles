#!/bin/sh

# Usar swaymsg para obtener la configuraci√≥n de entrada
# y buscar el layout actual.
# Nota: La salida de 'swaymsg -t get_input' puede variar un poco.
# layout=$(swaymsg -t get_inputs | grep -A 5 -E 'type:keyboard' | grep 'xkb_layout:' | awk '{print $2}')
layout=$(swaymsg -t get_inputs | grep -m 1 -E 'xkb_active_layout_name' | awk '{print $2}' | tr -d '"')

# swaymsg devuelve el layout en un formato como "us" o "es".

if [[ "$layout" == "English" ]]; then
    echo "US"
else
    echo "ES"
fi
